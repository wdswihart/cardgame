<VBox prefHeight="1000" prefWidth="1000"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="ui.CardDetailView.CardDetailController"
      stylesheets="@../../style.css"
      styleClass="root">
    <Button fx:id="mBackButton" text="Back"/>
    <VBox>
        <ScrollPane prefHeight="300" prefWidth="1000" maxWidth="Infinity">
            <content>
                <HBox>
                    <children>
                        <Button prefHeight="300" prefWidth="200" text="card 1" />
