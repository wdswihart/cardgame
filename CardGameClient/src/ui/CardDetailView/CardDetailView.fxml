                        <Button prefHeight="300" prefWidth="200" text="card 3" />
                        <Button prefHeight="300" prefWidth="200" text="card 4" />
                        <Button prefHeight="300" prefWidth="200" text="card 5" />
                        <Button prefHeight="300" prefWidth="200" text="card 6" />
                        <Button prefHeight="300" prefWidth="200" text="card 7" />
                        <Button prefHeight="300" prefWidth="200" text="card 8" />
                        <Button prefHeight="300" prefWidth="200" text="card 9" />
                        <Button prefHeight="300" prefWidth="200" text="card 10" />
                        <Button prefHeight="300" prefWidth="200" text="card 11" />
                    </children>
                </HBox>
            </content>
        </ScrollPane>
        <!-- Single Card View -->
        <SplitPane prefWidth="1000">
            <items>
                <Button text="Card Pic Here" prefHeight="450" prefWidth="400"/>
                <FlowPane styleClass="root" orientation="VERTICAL" alignment="CENTER">
                    <TextArea text="description goes here" prefWidth="400" editable="false"/>
